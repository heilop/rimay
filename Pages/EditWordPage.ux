<Page ux:Class="EditWordPage">
  <Router ux:Dependency="router" />

  <JavaScript File="EditWordPage.js" />

  <ScrollView>
    <StackPanel>
      <Text Value="{word}" />
      <Text>Word:</Text>
      <TextBox Value="{word}" />

      <Text>Location:</Text>
      <TextBox Value="{location}" />

      <Text>Rating:</Text>
      <TextBox Value="{usefulRating}" InputHint="Integer" />

      <Text>Comments:</Text>
      <TextBox Value="{comments}" TextWrapping="Wrap" />

      <Button Text="Back" Clicked="{goBack}" />
    </StackPanel>
  </ScrollView>
</Page>
